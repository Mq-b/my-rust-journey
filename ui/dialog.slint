import { VerticalBox } from "std-widgets.slint";

// 弹窗组件
export component MessageDialog inherits PopupWindow {
    in property <string> message;

    width: 300px;
    height: 150px;

    Rectangle {
        width: 100%;
        height: 100%;
        background: white;
        border-color: #333;
        border-width: 2px;
        border-radius: 8px;

        VerticalBox {
            padding: 20px;
            spacing: 15px;

            Text {
                text: root.message;
                horizontal-alignment: center;
                font-size: 16px;
                color: #333;
                wrap: word-wrap;
            }

            Rectangle {
                height: 40px;
                background: button-area.has-hover ? #0052a3 : #0066cc;
                border-radius: 5px;

                Text {
                    text: "关闭";
                    color: white;
                    font-size: 16px;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }

                button-area := TouchArea {
                    clicked => {
                        root.close();
                    }
                }
            }
        }
    }
}
